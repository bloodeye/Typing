<Window x:Class="Typing.Game_Screen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Typing"
        mc:Ignorable="d"
        Title="Game_Screen" Height="768" Width="1024">
    <Window.Resources>
        <TextBlock x:Key="word" HorizontalAlignment="Left" Height="56" Margin="0,0,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="238" FontFamily="Tamaho" FontSize="40" FontWeight="Bold"/>

    </Window.Resources>
    <Grid>

        <TextBlock x:Name="game_clock" HorizontalAlignment="Left" Height="48" Margin="850,49,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="166" FontFamily="Tamaho" FontSize="40"/>
        <TextBlock x:Name="word_block" HorizontalAlignment="Left" Height="56" Margin="214,131,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="238" FontFamily="Tamaho" FontSize="40" FontWeight="Bold"/>
    
    </Grid>
</Window>
